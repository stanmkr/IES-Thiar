<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="5dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/doberman" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"

            android:layout_gravity="center_horizontal"
            tools:text="Dobermanr" />

        <TextView
            android:id="@+id/tvTamanyo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12.5sp"
            tools:text="Hembra: Entre 58cm y 63cm\nMacho: Entre 58cm y 63cm"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tvPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12.5sp"
            android:layout_marginBottom="3dp"
            tools:text="Hembra: Entre 34kg y 38kg\nMacho: Entre 34kg y 38kg" />

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            tools:text="Color: Azul, Negro" />

        <TextView
            android:id="@+id/tvTipoPelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            tools:text="Tipo de pelo: Largo" />

        <TextView
            android:id="@+id/tvColorOjos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            tools:text="Color de ojos: MarrÃ³n" />

    </LinearLayout>

</LinearLayout>